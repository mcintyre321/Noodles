@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Noodles
@using Noodles.AspMvc.Views.Shared.Layout
@using Noodles.Helpers
@using Noodles.AspMvc.Helpers
@using Noodles.Models
@using Noodles.RequestHandling
@using FormFactory;
@using Noodles.AspMvc.UiAttributes
@model Noodles.Models.Resource
<div class="noodles-object" data-resource-url="@Model.Url">
    <div class="row">
        <div class="span@(12 - (ViewBag.Indent ?? 0))">
            <div class="page-header noodles-object-name" data-fragment-id="noodle-object-name">
                <h1>@Model.DisplayName</h1>
            </div>

            <div class="noodles-properties">
                @foreach (var property in Model.NodeProperties.Where(x => x.Setter == null))
                {
                    <div class="noodles-property" data-fragment-id="noodle-object-property-@property.DisplayName">
                        @Html.Partial("Noodles/NodeProperty", property)
                    </div>
                }
                @foreach (var formGrouping in Model.GetFormGroups())
                { 
                    @Html.Partial("Noodles/NodeMethod", formGrouping)
                   
                }
                @foreach (var p in Model.GetSingleSettableProperies())
                {
                    ViewBag.UseIconSubmit = true;
                    <div class="noodles-property" data-fragment-id="noodle-object-property-@p.DisplayName">
                        @Html.Partial("Noodles/NodeProperty", p)
                    </div>
                }

                @foreach(var link in Model.Links.Hinted("Inline"))
                {
                    @Html.Partial("Noodles/NodeBody.Object", link.Target )
                }
            </div>

            <br />
            @{
                var nodeMethods = Model.NodeMethods.Hinted("");
                if (nodeMethods.Any())
                {
                    <div class="well" data-fragment-id="noodle-object-actions">
                        @foreach (var method in nodeMethods)
                        {
                            @NoodlesHelper.NodeMethodLink(method, "btn")
                        }
                    </div>
                }
            }
            @foreach (var method in Model.NodeMethods.Hinted("TopBar.RightItems"))
            {
                Html.LayoutVm().TopBar.RightItems.Add(new NavItemVm(){ Html = NoodlesHelper.NodeMethodLink(method).ToHtmlString() });
            }
        </div>
    </div>
</div>
