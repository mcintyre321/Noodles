@using Noodles.Models
@using Noodles.RequestHandling
<!-- begin /Layout/Topbar.LeftItems.cshtml -->
@{
    
    <li><a href="/">Home</a></li>
    var root = ViewBag.Root as Resource;
    if (root != null)
    {
        foreach (var child in root.Links.Where(c => string.IsNullOrWhiteSpace(c.UiHint)))
        {
    <a href="@child.Url">@child.DisplayName</a>
        }
    }
}
