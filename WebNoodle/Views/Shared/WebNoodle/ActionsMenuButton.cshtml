@using System.Web.Mvc.Html
@using WebNoodle
@model object
@if (Model.NodeMethods().Any())
{
    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var method in Model.NodeMethods())
            {
                <a class="nodeActionsPanelLink" id="@(method.Id())_actionlink">@method.DisplayName</a>
            }
        </ul>
    </div>
}
@Html.Partial("WebNoodle/NodeActionsLinkScript")
