@using System.Web.Mvc.Html
@using WebNoodle
@using WebNoodle.Example.Models
@using WebNoodle.Helpers
@model WebNoodle.Example.Models.ToDoList
@{
    ViewBag.Title = "ToDoList.cshtml";
}
@helper MailToLink(string email)
    {
    <a href="@email">@email</a>
}
<h2>ToDoList.cshtml</h2>
<div class="row">
    <div class="span3">
        @Html.Partial("WebNoodle/NodeActions")
        @Html.Partial("WebNoodle/NodeActionsLinkScript")
    </div>
    <div class="span9">
        <h4>Tasks</h4>
        @helper Task(Task t)
        {
            <a href="@t.Path()">@t.Text</a>    
        }
        @helper Actions(object o)
        {
            foreach(var method in o.NodeMethods())
            {
                @Noodles.ActionFormLink(method)
            }
        }
        @Html.Partial("DataTable", Html.DataTableVmFor(() => Model.Tasks, t => new { Task = Task(t).ToHtmlString(), t.Status, Actions = Bootstrap.DropdownLinksButton("Actions", h => Actions(t)).ToHtmlString() }))
        <br />
        <h4>Users</h4>
        @Html.Partial("DataTable", Html.DataTableVmFor(() => Model.Users, u => new { Email = MailToLink(u.Email), u.Name }))
    </div>
</div>
