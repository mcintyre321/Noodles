@using Noodles
@using Noodles.Web.Helpers
@model object
 
<div class="btn-group">
    <button class="btn"><a href="@Model.Url()">@Model.GetName()</a></button>
    <button class="btn dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var method in Model.NodeMethods())
        {
        <li>@NoodlesHelper.NodeMethodLink(method)</li>
        }
    </ul>
</div>
