@using System.Web.Mvc.Html
@using Noodles
@using Noodles.Example.Models
@using Noodles
@using Noodles.Helpers
@using Noodles.Web.Helpers
@model Noodles.Example.Models.ToDoList
@{
    ViewBag.Title = "ToDoList";
}
@helper MailToLink(string email)
    {
    <a href="@email">@email</a>
}
<h2>ToDoList</h2>
<div class="row">
    <div class="span3">
        @foreach (var action in Model.NodeActions().Where(m => m.Name != "AddTask"))
        {
            <div>@NoodlesHelper.NodeActionLink(action, "btn btn-primary")</div>
        }
    </div>
    <div class="span9">
        <h4>Tasks</h4>
        @helper Task(Task t)
        {
            <a href="@t.Path()">@t.Text</a>    
        }
        @helper Actions(object o)
        {
            foreach (var action in o.NodeActions())
            {
                @NoodlesHelper.NodeActionLink(action)
            }
        }
        @NoodlesHelper.NodeActionForm(Html, Model.NodeActions().Single(m => m.Name == "AddTask"), "form-inline", new ViewDataDictionary(){{"Inline", true}})
        <br/>
        @Html.Partial("DataTable", Html.DataTableVmFor(() => Model.Tasks, t => new { Task = Task(t).ToHtmlString(), t.Status, Actions = NoodlesHelper.NodeActionsDropdown(t).ToHtmlString() }))
        <br />
        <h4>Users</h4>
        @Html.Partial("DataTable", Html.DataTableVmFor(() => Model.Users, u => new { Email = MailToLink(u.Email).ToHtmlString(), u.Name }))
    </div>
</div>
