@* Generator: MvcHelper *@
@using System.Web.Mvc
@helper DropdownLinksButton(string buttonTitle, Func<MvcHtmlString, HelperResult> links) { @DropdownLinksButton(buttonTitle, links, null)}
@helper DropdownLinksButton(string buttonTitle, Func<MvcHtmlString, HelperResult> links, string additionalClasses)
{
    <div class="btn-group @(additionalClasses ?? "")">
        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#">@buttonTitle <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @links(null)
        </ul>
    </div>
}

@helper Modal(string header, Func<MvcHtmlString, HelperResult> body, Func<MvcHtmlString, HelperResult> footer)
    {
    <div class="modal">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">×</a>
            <h3>@header</h3>
        </div>
        <div class="modal-body">
            @body(null)
        </div>
        <div class="modal-footer">
            @footer(null)
        </div>
    </div>
}